{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="sign" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="mb-3 font-weight-normal">Please sign in</h1>
    <div class="form-outline mb-4">
        <label class="form-label" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="form-outline mb-4">
        <label class="form-label" for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-primary btn-block mb-4" type="submit">
        Sign in
    </button>
</form>

<div class="text-center">
    <p>Did you forget your password? <a href="{{ path('app_forgot_password_request') }}"> click here reset</a></p>
</div>

<div class="text-center">
    <p>Don't you have an account? <a href="{{ path('app_register') }}"> click here register</a></p>
</div>

{% endblock %}
